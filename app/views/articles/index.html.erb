<table>
 
  <% @articles.each do |article| %>

      <h3><%= link_to article.title, article_path(article) %></h3>
      <h6>Written by <a href="#">Author</a> on August 12, 2012.</h6>
      <div class="row">
        <div class="large-6 columns">
          <%= truncate(article.text, :length => 450, :omission => '...') %><br />
          <ul class="inline-list right">
            <li><%= link_to 'Read more', article_path(article) %></li>
            <li><%= link_to 'Edit', edit_article_path(article) %></li>
            <li><%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: 'Are you sure?'}  %></li>
          </ul>
        </div>
        <div class="large-6 columns">
          <img src="http://placehold.it/400x240&text=[someimg]"/>
        </div>
        <hr>
      </div>

  <% end %>
</table>